<%- include('partials/header') %>

<div class="container">
    <% if(message != "") {%>
    
    <p class="text-center h1 text-danger"><%= message %></p>
    <%} %>
    <p class="text-center h1 text-danger">Add Product Page</p>
    <form style="margin-top: 50px; margin-bottom: 100px;" action="" method="POST" enctype="multipart/form-data" >
        <div class="form-row" >
            <select id="category" name="category" class="form-control" required>
                
                <option selected disabled>Choose Category</option>
                <option>Samsung</option>
                <option>sony</option>
                <option>Oppo</option>
                <option>Others</option>
            </select>
        </div>
        <div class="form-row">
            <div class="form-group" col-md-6>
                    <input id="name" name="name" type="text" class="form-control" required placeholder="Name">
            </div>
        </div>
        <div class="form-row">
                <div class="form-group" col-md-6>
                        <textarea id="description" name="description" type="text" cols="10" rows="3" class="form-control" required placeholder="description">

                        </textarea>
                </div>
            </div>
            <div class="form-row">
                    <div class="form-group" col-md-6>
                            <input id="quantity" name="quantity"  type="number"  class="form-control" required placeholder="quantity">
                    </div>
            </div>
            <div class="form-row">
                    <div class="form-group" col-md-6>
                            <input id="price" name="price"  type="number"  class="form-control" required placeholder="Price">
                    </div>
            </div>
            <div class="form-row">
                    <div class="form-group" col-md-6>
                        <label for="image" name="image"  >Product Image</label>
                        <input id="image" name="image"   type="file"  class="form-control" required placeholder="quantity">
                </div>
            </div>
            <div class="form-row text-center">
                    <button type="submit" class="btn btn-primary float-right">&nbsp;&nbsp; &nbsp; &nbsp;save Pproduct&nbsp;&nbsp; &nbsp; &nbsp;</button>
            
            </div>      
    </form>
</div>